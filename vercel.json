{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/test.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/test",
      "dest": "/api/test.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  },
  "functions": {
    "api/index.py": {
      "runtime": "python3.9"
    },
    "api/test.py": {
      "runtime": "python3.9"
    }
  },
  "crons": [
    {
      "path": "/api/cron/generate-questions",
      "schedule": "0 1 * * *"
    }
  ]
} 